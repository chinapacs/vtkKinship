<ServerManagerConfiguration>
   <ProxyGroup name="filters">
      <!-- ==================================================================== -->
      <SourceProxy name="ImageLocalConvolution" class="vtkImageLocalConvolution" label="Image Local Convolution">
         <Documentation
                       long_help=""
                       short_help="">
         </Documentation>
         
         <InputProperty
                       name="Input"
                       command="SetInputConnection">
            <ProxyGroupDomain name="groups">
               <Group name="sources"/>
               <Group name="filters"/>
            </ProxyGroupDomain>
            <DataTypeDomain name="input_type">
               <DataType value="vtkPointSet"/>
            </DataTypeDomain>
         </InputProperty>
         
         <InputProperty
                       name="Kernel"
                       command="SetKernelConnection">
            <ProxyGroupDomain name="groups">
               <Group name="sources"/>
               <Group name="filters"/>
            </ProxyGroupDomain>
            <DataTypeDomain name="input_type">
               <DataType value="vtkImageData"/>
            </DataTypeDomain>
         </InputProperty>
         
         <InputProperty
                       name="Image"
                       command="SetImageConnection">
            <ProxyGroupDomain name="groups">
               <Group name="sources"/>
               <Group name="filters"/>
            </ProxyGroupDomain>
            <DataTypeDomain name="input_type">
               <DataType value="vtkImageData"/>
            </DataTypeDomain>
         </InputProperty>

        <StringVectorProperty name="OutputDataName"
                      command="SetOutputDataName"
                      number_of_elements="1"
                      default_values="Convolution">

        </StringVectorProperty>
      </SourceProxy>
      <!-- End ImageLocalConvolution -->
   </ProxyGroup>
   <!-- End Filter Group -->
</ServerManagerConfiguration>

